{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "ES2015",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "lib/*": ["src/*"],
      "__tests__/*": ["./__tests__/*"],
      "types/*": ["./types/*"]
    }
  },
  "files": ["src/index.ts", "./src/basicSteps.ts"],
  "exclude": ["__tests__"],
  "include": ["src/**/*"]
}
